<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>com.nanochat.desktop</id>
  <name>NanoChat Desktop</name>
  <summary>Desktop AI chat application</summary>
  <metadata_license>MIT</metadata_license>
  <project_license>MIT</project_license>
  <description>
    <p>A modern desktop application for AI-powered conversations using the NanoGPT API.</p>
    <p>Features include:</p>
    <ul>
      <li>Dark-themed GTK4 interface</li>
      <li>Conversation management with history</li>
      <li>Web search integration</li>
      <li>Markdown rendering with syntax highlighting</li>
      <li>Keyboard shortcuts</li>
    </ul>
  </description>
  <launchable type="desktop-id">com.nanochat.desktop.desktop</launchable>
  <screenshots>
    <screenshot type="default">
      <image>https://raw.githubusercontent.com/jcrabapple/nanochat-desktop/main/screenshot.png</image>
    </screenshot>
  </screenshots>
  <url type="homepage">https://github.com/jcrabapple/nanochat-desktop</url>
  <url type="bugtracker">https://github.com/jcrabapple/nanochat-desktop/issues</url>
  <content_rating type="oars-1.1"/>
  <releases>
    <release version="0.2.3" date="2025-01-06">
      <description>
        <p>Release 0.2.3 - Flatpak Support</p>
        <ul>
          <li>Add Flatpak build with full GTK4 bundling</li>
          <li>Self-contained with all dependencies</li>
          <li>No system GTK4 required</li>
        </ul>
      </description>
    </release>
    <release version="0.2.2" date="2025-01-06">
      <description>
        <p>Release 0.2.2 - Better Error Messages</p>
        <ul>
          <li>Add GTK4 check to AppImage launcher</li>
          <li>Show helpful error messages when GTK4 is missing</li>
        </ul>
      </description>
    </release>
  </releases>
  <provides>
    <binary>nanochat</binary>
  </provides>
  <requires>
    <display_length compare="ge">360</display_length>
  </requires>
</component>
