{
    "app-id": "com.nanochat.desktop",
    "runtime": "org.gnome.Platform",
    "runtime-version": "46",
    "sdk": "org.gnome.Sdk",
    "command": "nanochat",
    "finish-args": [
        "--socket=wayland",
        "--socket=fallback-x11",
        "--share=network",
        "--filesystem=xdg-config/nanochat-desktop:create",
        "--filesystem=xdg-data/nanochat-desktop:create"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "nanochat-desktop",
            "buildsystem": "simple",
            "build-commands": [
                "pip3 install --no-index --find-links=/run/build/nanochat-desktop/build/flatpak-deps --prefix=${FLATPAK_DEST} --ignore-installed aiohttp markdown pygments sqlalchemy python-dotenv",
                "pip3 install --no-build-isolation --prefix=${FLATPAK_DEST} --no-deps /run/build/nanochat-desktop",
                "mkdir -p ${FLATPAK_DEST}/bin",
                "cat > ${FLATPAK_DEST}/bin/nanochat << 'EOF'\n#!/bin/bash\nexport PYTHONPATH=${FLATPAK_DEST}/lib/python3.11/site-packages:${PYTHONPATH}\nexec python3 -m nanochat.main \"$@\"\nEOF",
                "chmod +x ${FLATPAK_DEST}/bin/nanochat",
                "install -Dm644 /run/build/nanochat-desktop/build/com.nanochat.desktop.desktop ${FLATPAK_DEST}/share/applications/com.nanochat.desktop.desktop",
                "install -Dm644 /run/build/nanochat-desktop/build/com.nanochat.desktop.metainfo.xml ${FLATPAK_DEST}/share/metainfo/com.nanochat.desktop.appdata.xml",
                "install -Dm644 /run/build/nanochat-desktop/build/nanochat.svg ${FLATPAK_DEST}/share/icons/hicolor/256x256/apps/com.nanochat.desktop.svg"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                }
            ]
        }
    ]
}
